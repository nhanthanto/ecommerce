<style type="text/css">
	label {
		display: inline-block;
		float: left;
	}
	input {
		display: inline-block;
		float: right;
	}
</style>

<div class="row container">
	<form class="col" action="/login" method="post">
	<fieldset>
		<legend>Login</legend>
		<%= token_tag nil %>
		<label>Email: </label>
		<input type="text" name="email"><br><br>
		<label>Password: </label>
		<input type="password" name="password_digest"><br><br>
		<input type="submit" value="Login">
	</fieldset>
</form>

<form class="col" action="/user" method="post">
	<fieldset>
		<legend>Register</legend>
		<%= token_tag nil %>
		<label>First Name: </label>
		<input type="text" name="user[fname]"><br><br>
		<label>Last Name: </label>
		<input type="text" name="user[lname]"><br><br>
		<label>Email: </label>
		<input type="text" name="user[email]"><br><br>
		<label>Password: </label>
		<input type="password" name="user[password]"><br><br>
		<label>Password Confirmation: </label>
		<input type="password" name="user[password_confirmation]"><br><br>
		<label>Address: </label>
		<input type="text" name="user[address]"><br><br>
		<input type="submit" value="Login">
	</fieldset>
</form>
</div>